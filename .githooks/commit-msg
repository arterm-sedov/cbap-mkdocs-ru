#!/usr/bin/env bash
set -euo pipefail

MSG_FILE="$1"

# Suggest format: [#XXXXX] Message
first_line="$(head -n1 "$MSG_FILE" || true)"

if ! printf '%s' "$first_line" | grep -qE '^\[\#[0-9]+\] '; then
  echo "Warning: Consider using format [#XXXXX] Message for commit messages (see .cursor/rules/cmwhelp_commit.mdc)" 1>&2
  echo "Commit will proceed anyway..." 1>&2
fi

exit 0


