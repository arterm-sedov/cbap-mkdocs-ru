<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
             xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC"
             xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             id="Definitions_1"
             targetNamespace="http://bpmn.io/schema/bpmn">
  <process id="Process_1" isExecutable="true" name="Отбор кандидата на открытую вакансию">
    <laneSet>
      <lane id="Lane_HiringSpecialist" name="Специалист по найму"/>
      <lane id="Lane_Manager" name="Нанимающий руководитель"/>
      <lane id="Lane_HRDirector" name="Директор по персоналу"/>
    </laneSet>
    <startEvent id="StartEvent_1" name="Получены результаты тестирования"/>
    <userTask id="Task_1" name="Зафиксировать результаты тестирования"/>
    <exclusiveGateway id="Gateway_1" name="Кандидат успешно прошел тестирование?"/>
    <endEvent id="EndEvent_1" name="Кандидат не прошел тестирование"/>
    <userTask id="Task_2" name="Провести собеседование"/>
    <exclusiveGateway id="Gateway_2" name="Кандидат успешно прошел собеседование?"/>
    <endEvent id="EndEvent_2" name="Кандидат не прошел собеседование"/>
    <userTask id="Task_3" name="Сформировать предложение"/>
    <userTask id="Task_4" name="Согласовать предложение"/>
    <exclusiveGateway id="Gateway_3" name="Какое решение по предложению?"/>
    <endEvent id="EndEvent_3" name="Кандидат отклонил предложение"/>
    <userTask id="Task_5" name="Обсудить предложение с кандидатом"/>
    <exclusiveGateway id="Gateway_4" name="Кандидат принял предложение?"/>
    <endEvent id="EndEvent_4" name="Кандидат принял предложение"/>
    <!-- Sequence Flows -->
    <sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="Task_1"/>
    <sequenceFlow id="Flow_2" sourceRef="Task_1" targetRef="Gateway_1"/>
    <sequenceFlow id="Flow_3" sourceRef="Gateway_1" targetRef="EndEvent_1" name="Нет"/>
    <sequenceFlow id="Flow_4" sourceRef="Gateway_1" targetRef="Task_2" name="Да"/>
    <sequenceFlow id="Flow_5" sourceRef="Task_2" targetRef="Gateway_2"/>
    <sequenceFlow id="Flow_6" sourceRef="Gateway_2" targetRef="EndEvent_2" name="Нет"/>
    <sequenceFlow id="Flow_7" sourceRef="Gateway_2" targetRef="Task_3" name="Да"/>
    <sequenceFlow id="Flow_8" sourceRef="Task_3" targetRef="Task_4"/>
    <sequenceFlow id="Flow_9" sourceRef="Task_4" targetRef="Gateway_3"/>
    <sequenceFlow id="Flow_10" sourceRef="Gateway_3" targetRef="EndEvent_3" name="Отклонить"/>
    <sequenceFlow id="Flow_11" sourceRef="Gateway_3" targetRef="Task_5" name="Одобрить"/>
    <sequenceFlow id="Flow_12" sourceRef="Task_5" targetRef="Gateway_4"/>
    <sequenceFlow id="Flow_13" sourceRef="Gateway_4" targetRef="EndEvent_4" name="Да"/>
    <sequenceFlow id="Flow_14" sourceRef="Gateway_4" targetRef="EndEvent_3" name="Нет"/>
  </process>
</definitions> 